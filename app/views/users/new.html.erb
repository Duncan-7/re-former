<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label "Email Address:" %>
  <%= f.text_field :email, :placeholder => 'example@example.com' %>
  <%= f.label "Password:" %>
  <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<% end %>


